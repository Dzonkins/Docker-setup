      - /srv/HDD1/dockerConfig/Jellyfin/cache:/cache
      - /srv:/media
    ports:
      - 8096:8096
      - 8920:8920 
    restart: unless-stopped
    
  sonarr:
    image: lscr.io/linuxserver/sonarr
    container_name: Sonarr
