     restart: unless-stopped
     
  jackett:
      image: lscr.io/linuxserver/jackett
      container_name: Jackett
      environment:
        - PUID=1000
        - PGID=1000
      volumes:
        - /srv/HDD1/dockerConfig/Jackett:/config
      ports:
        - 9117:9117
